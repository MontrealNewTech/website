<div class="content">
  <h1>Events</h1>

  <ul class="accordion-tabs">
    <% @events_by_date.each do |date, events| %>
      <li class="tab-header-and-content">
        <a href="#" class="tab-link">
          <p><%= t("weekdays.#{date.wday}") %></p>
          <%= l(date, format: :short) %>
        </a>
        <div class="tab-content">
          <% events.each do |event| %>
            <article class='event'>
              <% cache event do %>
                <p><b><%= event.summary %></b></p>
                <p><%= l(event.start.date_time, format: :full) %></p>
                <p><%= event.location %></p>
              <% end %>
            </article>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
