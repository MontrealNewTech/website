<%= provide :title, t('.title') %>

<section id='mtlnewtech'>
  <div class='headers'>
    <h1><%= t('.mtlnewtech.main') %></h1>
    <h2><%= t('.mtlnewtech.sub') %></h2>
  </div>
  <div class='empty'>
  </div>
</section>

<section id='events'>
  <div class='content'>
    <h2><%= t('.events') %></h2>

    <% @events.each do |event| %>
      <article class='event'>
        <div class='info'>
          <h3><%= event.title%></h3>
          <p class='clock fixed-width-icon'>
          <%= "#{l(event.start_at, format: :date_time)} - #{l(event.end_at, format: :time)}" %>
          </p>
          <p class='map fixed-width-icon'><%= event.location %></p>
          <div class='links'>
            <%= link_to t('.get_tickets'), eventbrite_ticket_link(event), target: '_blank', rel: 'nofollow', class: 'button' %>
            <%= link_to t('.more'), event.link, target: '_blank', class: 'more' %>
          </div>
        </div>
        <div class='image'>
          <%= image_tag event.cover_image_url %>
        </div>
      </article>
    <% end %>
  </div>
</section>

<section id='sign_up'>
  <div class='mailing-list'>
    <div class='email-collection'>
      <h2><%= t('.sign_up.header') %></h2>
      <h3><%= t('.sign_up.sub') %></h3>
    </div>
    <div id='email_sign_up_box'>
      <%= render 'contacts/new' %>
    </div>
  </div>
  <div class='apply-to-demo'>
    <h2><%= t('.apply_to_demo') %></h2>
    <%= link_to t('.apply_link'), DEMO[:apply], target: '_blank', class: 'button' %>
  </div>
</section>

<section id='what_we_do'>
  <div class='content'>
    <h2><%= t('.what_we_do') %></h2>
    <p><%= t('pages.about.about_us') %></p>
    <%= link_to t('.about'), about_path, class: 'outline-button' %>
  </div>
</section>

<section id='sponsors'>
  <div class='content'>
    <h3><%= t('.sponsors') %></h3>
    <div class='logos'>
      <% @sponsors.each do |sponsor| %>
        <div class='logo'><img src="<%= sponsor.logo %>"></div>
      <% end %>
    </div>
  </div>
</section>
