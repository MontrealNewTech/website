<% startup_fest_website = 'http://www.startupfestival.com/' %>
<% ticket_link_150 = 'http://go.mtlnewtech.com/startupfest150startup' %>
<% ticket_link_290 = 'http://go.mtlnewtech.com/startupfest150prostartup' %>
<% info_form_link = 'http://go.mtlnewtech.com/startupfest2017tix' %>
<% demo_table_content = 'http://www.startupfestival.com/' %>

<a href=<%= startup_fest_website %> target='blank'>
  <%= image_tag 'startupfest-banner', role: 'banner', class: 'banner' %>
</a>

<section class='join-us'>
  <div class='content'>
    <h2><%= t('.join_us_1') %></h2>
    <h3><%= t('.join_us_2') %></h3>

    <form action='https://www.paypal.com/cgi-bin/webscr' method='post' target='_top'>
      <input type='hidden' name='cmd' value='_s-xclick'>
      <input type='hidden' name='hosted_button_id' value='7T6YFRJRJDBW2'>
      <input type='hidden' name='on0' value='Pass Startupfest'>

      <input type='submit' name='submit' value='<%= t('.startupfest_pass') %>'>

      <select name='os0'>
        <option value='Startups'>Startups $150.00 CAD</option>
        <option value='Aspiring Entrepreneurs'>Aspiring Entrepreneurs $150.00 CAD</option>
        <option value='Professional Aspiring Entrepreneur'>Professional Aspiring Entrepreneur $290.00 CAD</option>
      </select>

      <input type='hidden' name='currency_code' value='CAD'>
    </form>

    <p><%= t('.for_only') %></p>
    <div class='price'><%= t('.price') %></div>
    <%= link_to t('.fill_form'), info_form_link, target: 'blank', class: 'info-form' %>
    <h3><%= t('.partnership') %></h3>
  </div>
</section>

<section class='qi'>
  <div class='info'>
    <p><%= t('.qi_1') %></p>
    <p><%= t('.qi_2') %></p>
  </div>
  <div class='feature'>
    <%= image_tag 'qi-logo' %>
  </div>
</section>

<section class='details'>
  <div class='content'>
    <p><%= t('.details_1') %></p>

    <form action='https://www.paypal.com/cgi-bin/webscr' method='post' target='_top'>
      <input type='hidden' name='cmd' value='_s-xclick'>
      <input type='hidden' name='hosted_button_id' value='7T6YFRJRJDBW2'>
      <input type='hidden' name='on0' value='Pass Startupfest'>


      <select name='os0'>
        <option value='Startups'>Startups $150.00 CAD</option>
        <option value='Aspiring Entrepreneurs'>Aspiring Entrepreneurs $150.00 CAD</option>
        <option value='Professional Aspiring Entrepreneur'>Professional Aspiring Entrepreneur $290.00 CAD</option>
      </select>

      <input type='submit' name='submit' value='<%= t('.startupfest_pass') %>'>
      <input type='hidden' name='currency_code' value='CAD'>
      <%= link_to t('.fill_form'), info_form_link, target: 'blank', class: 'info-form' %>
    </form>

    <p><%= t('.details_2') %></p>
    <p><%= t('.details_3') %></p>
  </div>
</section>

<section class='eligibility'>
  <h3><%= t('.eligibility_1') %></h3>
  <div class='criteria'>
    <div class='pied-piper'><%= t('.eligibility_2') %></div>
    <div class='hour-glass'><%= t('.eligibility_3') %></div>
    <div class='people'><%= t('.eligibility_4') %></div>
  </div>
</section>

<section class='more-details'>
  <div class='feature'>
    <h3><%= t('.more_details_1') %></h3>
  </div>
  <div class='info'>
    <% link = link_to t('.startup_festival'), startup_fest_website, target: 'blank' %>
    <p><%= t('.more_details_2_html', link: link) %></p>
    <p><%= t('.more_details_3') %></p>
    <p><%= link_to t('.more_details_4'), startup_fest_website, target: 'blank' %></p>
  </div>
</section>

<a href=<%= startup_fest_website %> target='blank'>
  <%= image_tag 'startupfest-stage', class: 'banner' %>
</a>

<section class='cta'>
    <form action='https://www.paypal.com/cgi-bin/webscr' method='post' target='_top'>
      <input type='hidden' name='cmd' value='_s-xclick'>
      <input type='hidden' name='hosted_button_id' value='7T6YFRJRJDBW2'>
      <input type='hidden' name='on0' value='Pass Startupfest'>


      <select name='os0'>
        <option value='Startups'>Startups $150.00 CAD</option>
        <option value='Aspiring Entrepreneurs'>Aspiring Entrepreneurs $150.00 CAD</option>
        <option value='Professional Aspiring Entrepreneur'>Professional Aspiring Entrepreneur $290.00 CAD</option>
      </select>

      <input type='submit' name='submit' value='<%= t('.startupfest_pass') %>'>
      <input type='hidden' name='currency_code' value='CAD'>
      <%= link_to t('.fill_form'), info_form_link, target: 'blank', class: 'info-form' %>
    </form>

  <h4><%= t('.contest') %></h4>
</section>

<section class='demo-table'>
  <%= link_to t('.enter_for_demo_table'), demo_table_content, class: 'button' %>
  <h5><%= t('.enter_for_demo_table') %></h5>
</section>

<section class='final-cta'>
  <div class='feature'>
    <h3><%= t('.get_your_pass') %></h3>
  </div>
  <div class='info'>
    <p><%= t('.payment') %></p>
    <form action='https://www.paypal.com/cgi-bin/webscr' method='post' target='_top'>
      <input type='hidden' name='cmd' value='_s-xclick'>
      <input type='hidden' name='hosted_button_id' value='7T6YFRJRJDBW2'>
      <input type='hidden' name='on0' value='Pass Startupfest'>


      <select name='os0'>
        <option value='Startups'>Startups $150.00 CAD</option>
        <option value='Aspiring Entrepreneurs'>Aspiring Entrepreneurs $150.00 CAD</option>
        <option value='Professional Aspiring Entrepreneur'>Professional Aspiring Entrepreneur $290.00 CAD</option>
      </select>

      <input type='submit' name='submit' value='<%= t('.startupfest_pass') %>'>
      <input type='hidden' name='currency_code' value='CAD'>
      <%= link_to t('.fill_form'), info_form_link, target: 'blank', class: 'info-form' %>
    </form>

    <p><%= t('.other_tickets') %></p>
  </div>
</section>

<section class='thank-you'>
  <h4><%= t('.thanks') %></h4>
  <p><%= t('.sign_off') %></p>
</section>

