<div class='log-in'>
  <h2><%= t('forms.log_in') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='field'>
      <%= f.email_field :email, autofocus: true, placeholder: t('forms.email') %>
    </div>

    <div class='field'>
      <%= f.password_field :password, autocomplete: 'off', placeholder: t('forms.password') %>
    </div>

    <div class='field checkbox'>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('forms.remember') %>
    </div>

    <div class='actions'>
      <%= f.submit t('forms.log_in') %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
